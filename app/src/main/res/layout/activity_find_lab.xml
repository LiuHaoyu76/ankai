<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_lab1"
        android:entries="@array/parent_id"
        android:textColor="@color/material_blue_500"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_lab2"
        android:entries="@array/lab_level"
        android:textColor="@color/material_blue_500"
        android:layout_below="@+id/spinner_lab1"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_lab3"
        android:entries="@array/lab_type"
        android:textColor="@color/material_blue_500"
        android:layout_below="@+id/spinner_lab2"
        android:layout_alignParentStart="true" />
    <com.rey.material.widget.Button
        android:id="@+id/btnxuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:textColor="@color/material_blue_500"
        android:layout_below="@+id/spinner_lab3"
        style="@style/btn_green.status_menu"
        />

</RelativeLayout>
