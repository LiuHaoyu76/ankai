<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:id="@+id/item_small"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp" >

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="时间"
            android:textSize="12dp"
            android:maxLines="2"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignTop="@+id/relative" />



        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/image"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_store_mark" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="15"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:text="测试数据"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_1" />
            <TextView
                android:id="@+id/item_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_dark"
                android:text="地点"
                android:textSize="10sp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/item_title" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:text="姓名"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/image_1" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_dark"
                android:text="经纬"
                android:textSize="10sp"
                android:layout_alignTop="@+id/item_name"
                android:layout_alignStart="@+id/item_local" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout><!-- From: file:/Users/florentchampigny/Documents/MaterialViewPager/materialviewpager/src/main/res/layout/tools_list_item_card_big.xml -->