<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:id="@+id/item_small"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp" >

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:text="id"
            android:textSize="12dp"
            android:maxLines="2"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignTop="@+id/relative" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="10dp" >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="15"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:text="名字"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentTop="true"
                 />
            <TextView
                android:id="@+id/item_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_dark"
                android:text="地点"
                android:textSize="10sp"
                android:layout_marginStart="6dp"
                android:layout_alignTop="@+id/item_status"
                android:layout_toEndOf="@+id/item_status" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:text="分类和分类"
                android:textSize="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"

                  />

            <TextView
                android:id="@+id/item_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_dark"
                android:text="学院"
                android:textSize="10sp"
                android:layout_marginStart="22dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/item_local" />

            <TextView
                android:id="@+id/item_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:textColor="@android:color/holo_blue_dark"
                android:text="联系人"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/item_name"
                android:layout_alignBottom="@+id/item_name"
                android:layout_alignStart="@+id/item_school"
                android:layout_marginStart="14dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>